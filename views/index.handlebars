
<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="row search-bar-inner justify-content-around">
      <a href="/restaurants/new" class="btn btn-success m-auto">新增餐廳</a>
      <form action="/search">
        <h4 class="mb-2 search-bar-title">尋找餐廳：</h4>
        <div class="input-group">
          <input type="text" name="keywords" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
            aria-describedby="search-button" value="{{keyword}}" />
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button">
              <i class="fas fa-search"></i>
            </button>
          </div>
        </div>
      </form>
      
      <form action="./restaurants">
        <h4 class="mb-2" for="sort">種類</h4>
        <select id="sort" name="sort" onchange="form.submit()">
          <option>請選擇</option>
          <option value="1">A -> Z</option>
          <option value="2">Z -> A</option>
          <option value="3">類別</option>
          <option value="4">地區</option>
        </select>
      </form>
    </div>
  </div>
</div>


<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="card-columns">
        {{#each restaurantsData}}
        <div class="card mb-1">
          <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}" />

          <div class="card-body p-3">
            <h6 class="card-title mb-1">{{this.name}}</h6>

            <div class="restaurant-category mb-1">
              <i class="fas fa-utensils pr-2"></i>
              {{this.category}}
            </div>

            <span class="badge badge-pill badge-danger font-weight-normal">
              {{this.rating}}
              <i class="fas fa-star fa-xs"></i>
            </span>
          </div>

          <div class="card-footer d-flex justify-content-end flex-wrap">
            <a href="/restaurants/{{this._id}}/edit">
              <button class="btn btn-link">Edit</button>
            </a>
            <a href="/restaurants/{{this._id}}">
              <button class="btn btn-link">Detail</button>
            </a>
            <form action="/restaurants/{{this._id}}?_method=DELETE" method="POST">
              <button type="submit" class="btn btn-danger">delete</button>
            </form>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>